<?xml version="1.0" encoding="UTF-8"?>
<?language javascript?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.cell.*?>
<?import javafx.collections.*?>


<fx:root xmlns:fx="http://javafx.com/fxml"
	type="javafx.scene.layout.BorderPane" fx:id="root">
	<center>
		<VBox>
			<TableView fx:id="table">
				<columns>
					<TableColumn text="Enabled"
						prefWidth="${table.width*0.1}">
						<cellValueFactory>
							<PropertyValueFactory property="enabled" />
						</cellValueFactory>
					</TableColumn>
					<TableColumn text="Filter"
						prefWidth="${table.width*0.7}">
						<cellValueFactory>
							<PropertyValueFactory property="token" />
						</cellValueFactory>
					</TableColumn>
					<TableColumn text="Color"
						prefWidth="${table.width*0.2}">
						<cellValueFactory>
							<PropertyValueFactory property="color" />
						</cellValueFactory>
					</TableColumn>
				</columns>
			</TableView>
		</VBox>

	</center>
	<bottom>
		<GridPane hgap="10" vgap="10">
			<children>
				<CheckBox GridPane.columnIndex="1" GridPane.rowIndex="1"
					fx:id="enabled" text="Enabled" />
				<TextField GridPane.columnIndex="2" GridPane.rowIndex="1"
					fx:id="token" prefWidth="200" />
				<ComboBox GridPane.columnIndex="3" GridPane.rowIndex="1"
					fx:id="combo">
					<items>
						<FXCollections fx:factory="observableArrayList">
							<String fx:value="Blue" />
							<String fx:value="Brown" />
							<String fx:value="Cyan" />
							<String fx:value="Green" />
							<String fx:value="Grey" />
							<String fx:value="Indigo" />
							<String fx:value="Lime" />
							<String fx:value="Magenta" />
							<String fx:value="Navy" />
							<String fx:value="Orange" />
							<String fx:value="Pink" />
							<String fx:value="Purple" />
							<String fx:value="Red" />
							<String fx:value="Violet" />
							<String fx:value="Yellow" />
						</FXCollections>
					</items>
					<value>
						<String fx:value="Yellow" />
					</value>
				</ComboBox>
				<Button text="Add" GridPane.columnIndex="4"
					GridPane.rowIndex="1" onAction="#addFilterToTable" />
				<Button text="Modify" fx:id="saveButton"
					GridPane.columnIndex="5" GridPane.rowIndex="1"
					onAction="#saveFilter" disable="true" />
				<Button text="Delete" fx:id="deleteButton"
					GridPane.columnIndex="6" GridPane.rowIndex="1"
					onAction="#removeFilterFromTable" disable="true" />
			</children>
			<rowConstraints>
				<RowConstraints vgrow="ALWAYS" />
			</rowConstraints>
		</GridPane>
	</bottom>

</fx:root>
