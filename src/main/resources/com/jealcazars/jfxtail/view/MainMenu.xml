<?xml version="1.0" encoding="UTF-8"?>
<?language javascript?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import com.jealcazars.jfxtail.control.menu.*?>

<fx:root xmlns:fx="http://javafx.com/fxml"
	type="javafx.scene.layout.VBox" fx:id="root">
	<MenuBar>
		<menus>
			<Menu text="File">
				<items>
					<OpenMenuItem text="Open" fx:id="menuItemOpen" />
					<SeparatorMenuItem />
					<Menu text="Recent Files" fx:id="recentFiles" />
					<SeparatorMenuItem />
					<MenuItem text="Exit" onAction="java.lang.System.exit(0);" />

				</items>
			</Menu>
			<Menu text="Tools">
				<items>
					<HighlightMenuItem text="Highlight Filter" />
					<TextFilterMenuItem
						text="Include/Exclude Text Filter" />
					<MaxLineMenuItem text="Max. Lines Number" />
					<BufferSizeMenuItem text="Buffer Size" />
					<RefreshRateMenuItem text="Refresh Rate" />
				</items>
			</Menu>
		</menus>
	</MenuBar>
</fx:root>
