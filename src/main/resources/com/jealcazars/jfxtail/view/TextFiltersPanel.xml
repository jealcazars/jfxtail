<?xml version="1.0" encoding="UTF-8"?>
<?language javascript?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.cell.*?>
<?import javafx.collections.*?>


<fx:root xmlns:fx="http://javafx.com/fxml"
	type="javafx.scene.layout.BorderPane" fx:id="root">
	<center>
		<VBox>
			<TableView fx:id="textFiltersTable">
				<columns>
					<TableColumn text="Filter">
						<cellValueFactory>
							<PropertyValueFactory property="token" />
						</cellValueFactory>
					</TableColumn>
				</columns>
			</TableView>
			<Button text="Delete" onAction="#removeTextFilterFromTable"></Button>
		</VBox>

	</center>
	<bottom>
		<GridPane hgap="10" vgap="10">
			<TextField GridPane.columnIndex="0" GridPane.rowIndex="1"
				fx:id="token" />
			<Button text="Add" GridPane.columnIndex="3"
				GridPane.rowIndex="1" onAction="#addTextFilterToTable"></Button>
		</GridPane>
	</bottom>

</fx:root>
